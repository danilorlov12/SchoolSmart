<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_light</item>
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_light</item>
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <style name="TextBlueLight54" >
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">54sp</item>
    </style>

    <style name="TextBlackLight32" >
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextBlueLight24A0" >
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBlueLight24" >
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBlue24" >
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBlue18" >
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBlue14" >
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextWhite16">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextWhite24">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonTextStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextInputLayout.Rounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/blue_dark</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textColorHint">@color/blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
    </style>

    <style name="TextInputEditText.Rounded" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="BottomNavigation" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/blue_dark</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@color/active_tab_color</item>
        <item name="itemTextColor">@color/active_tab_color</item>
        <item name="itemIconSize">28sp</item>
    </style>
</resources>